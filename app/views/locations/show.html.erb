<!-- header -->
  <header class="jumbotron header" id="header">
    <div class="container">
      <div class="row">
        <div class="col-md-6 left">
          <div class="avatar">
            <%= image_tag @location.photo.url(:large), alt: 'image', class: 'img-responsive', id: 'photo' %>
          </div>
        </div>
        <div class="col-md-6 right">
          <h1 class="hide"></h1>
          <h2 class="heading" id="location"><%= @location.name %></h2>
          <p id="description"><%= @location.description %></p>
          <% if @location.creative_commons %>
          <p><%= link_to '画像提供者', @location.author, target: '_blank'  %></p>
          <% end %>
          <%= button_to 'もう一回', root_path,  {class: 'btn btn-primary', id: 'refresh', method: :get} %>
        </div>
      </div>
    </div>
  </header>
  <!-- end header -->
