<!-- header -->
  <header class="jumbotron header" id="header">
    <div class="container">
      <div class="row">
        <div class="col-md-6 left">
          <div class="avatar">
            <img ng-src="{{location.photo}}" class="img-responsive" alt="Profile Picture">
          </div>
        </div>
        <div class="col-md-6 right">
          <h1 class="hide">{{location.name}}</h1>
          <h2 class="heading">{{location.name}}</h2>
          <p>{{location.description}}</p>
          <%= link_to '地図', '#about-me', class: 'btn btn-default btn-lg' %>
          <%= link_to 'もう一回', root_path, class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    </div>
  </header>
  <!-- end header -->


  <!-- contacts -->
  <section class="section contacts" id="contacts">
    <div class="container">
      <h2 class="heading">地図</h2>
      <div class="row google-map">
        <div class="map-canvas"></div>
      </div>
     </div>
    </div>  
  </section>
  <!-- end contacts -->
