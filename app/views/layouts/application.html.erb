<!DOCTYPE html>
<html lang='ja'>
<head>
<title>Zekkei</title>
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
<%= include_gon %>
<%= javascript_include_tag '//maps.googleapis.com/maps/api/js?v=3.9&sensor=false' %>
<%= javascript_include_tag '//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' %>
<%= analytics_init if Rails.env.production? %>

<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

<%= csrf_meta_tags %>
</head>
<body>
<!-- main navigation -->
<nav class="navbar navbar-default navbar-fixed-top" id="main-nav" role="navigation">
  <div class="container">
    <!-- brand and toggle -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".main-nav-collapse">
        <span class="sr-only">Toggle Navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>         
      <%= link_to '絶景スイッチ', root_path, class: 'navbar-brand' %>
    </div>

  </div>
</nav>
<!-- end main navigation -->

<%= yield %>

<!-- footer -->
<footer class="container">
  <p>Copyright 2014 <%= link_to '@otukutun', 'https://twitter.com/otukutun' %>. All Rights Reserved.</p>
</footer>
<!-- end footer -->
</body>
</html>
